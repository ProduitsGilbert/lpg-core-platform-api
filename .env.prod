# Production Environment Configuration
APP_ENV=prod

# Database Configuration - Production database details
DB_DSN=mssql+pyodbc://user:pass@prod-server/DB?driver=ODBC+Driver+17+for+SQL+Server&TrustServerCertificate=yes

# Business Central API Configuration - Production URLs
ERP_BASE_URL=https://prod-bc-server:7048/BC/api/v1.0/

# Application Configuration
ENVIRONMENT=production
DEBUG=false

# Production feature flags
ENABLE_SCHEDULER=true
ENABLE_OCR=true
ENABLE_AI_ASSISTANCE=true

# CORS for production (restrictive)
CORS_ORIGINS=["https://your-production-domain.com"]

# Performance tuning for production
DB_POOL_SIZE=20
DB_POOL_OVERFLOW=30
DB_POOL_TIMEOUT=60
REQUEST_TIMEOUT=120
